<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Combate">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="210dp"
        android:src="@drawable/fondo" />

    <ImageView
        android:id="@+id/lucario"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="300dp"
        android:src="@drawable/lucario_espalda" />

    <ImageView
        android:id="@+id/braviary"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_marginTop="225dp"
        android:layout_marginStart="200dp"
        android:src="@drawable/braviary_frente" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Mucho texto para ti"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="470dp">


    </TextView>

    <TextView
        android:id="@+id/NombreLucario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Lucario"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="300dp"/>
    <TextView
        android:id="@+id/SaludLucario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tu salud aqui"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="300dp"/>


    <TextView
        android:id="@+id/NombreBraviary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Braviary"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/SaludBraviary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tu salud aqui"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="20dp"/>



</FrameLayout>